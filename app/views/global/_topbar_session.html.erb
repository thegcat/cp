<% if user_signed_in? -%>
  <li class="active has-dropdown">
    <a href="#"><%=t 'account.greeting', name: current_user.email -%></a>
    <ul class="dropdown">
      <li>
        <%= link_to t('account.my'), edit_user_registration_path -%>
        <%= link_to t('account.sign_out'), destroy_user_session_path, method: :delete %>
      </li>
    </ul>
  </li>
<% else -%>
  <li class="active">
    <%= link_to t('account.sign_in'), new_user_session_path %>
  </li>
<% end -%>
